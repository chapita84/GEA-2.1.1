rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile images: Users can only write to their own folder. Anyone can read.
    match /profile-images/{userId}/{allPaths=**} {
      allow read;
      // Sintaxis corregida: se quita el 'if' duplicado y los '<>'
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Commerce images: Only authenticated admins can write. Anyone can read.
    match /commerce-images/{commerceId}/{allPaths=**} {
      allow read;
      // SOLUCIÓN TEMPORAL: Permite la escritura para desbloquear el desarrollo
      // con el login manual. Esto es inseguro para producción.
      allow write: if true;
    }
  }
}